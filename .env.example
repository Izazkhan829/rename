# Mode: "bot" or "user"
MODE=bot

# Bot mode (required if MODE=bot)
BOT_TOKEN=123456:ABC-DEF...

# User mode (required if MODE=user)
API_ID=123456
API_HASH=your_api_hash_here
SESSION_NAME=rename_user_session

# Preferred: Paste the session string generated locally (RENDER secret)
SESSION_STRING=

# Or: mount session file into container and set this path
SESSION_FILE_PATH=/path/on/container/rename_user_session.session

# Optional owner/admin restrictions (comma separated ints)
OWNER_IDS=123456789,987654321

# Optional group whitelist (comma separated chat ids)
ALLOW_GROUP_IDS=

# TZ for logs
TZ=UTC